function addSubtract(int1, int2, int3) {
    //we write a function which will sum the first 2 integers
    function sum(int1, int2) {
        return int1 + int2
    }
    // we invoke the function with parameters int1,int2
    let result = sum(int1, int2)
    // we create a function which will subtract the result from sum() with the third integer
    function subtract(result, int3) {

        return result - int3
    }
    // we invoke the function subtract() by passing parameters result and integer 3
    console.log(subtract(result, int3))
}
addSubtract(1, 17, 30)
